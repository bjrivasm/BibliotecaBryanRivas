<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BibliotecaBryanRivas.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BibliotecaBryanRivas"
    Shell.FlyoutBehavior="Disabled"
    Title="BibliotecaBryanRivas"
    BackgroundColor="Wheat"
    Shell.TabBarBackgroundColor="Wheat"
    Shell.TabBarTitleColor="Black"
    Shell.TabBarForegroundColor="Black"
    Shell.TabBarUnselectedColor="Black">    

    <TabBar x:Name="Tabbar">
        <ShellContent Title="Principal" ContentTemplate="{DataTemplate local:MainPage}"/>
        <ShellContent Title="Alta" ContentTemplate="{DataTemplate local:AltaPage}"/>
        <ShellContent Title="Consulta" ContentTemplate="{DataTemplate local:ConsultaPage}"/>
    </TabBar>

</Shell>
